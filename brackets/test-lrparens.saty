|) '<
  +math-list(${
    |\lp{\sin^x \cos^x}
    |\rp{\sin^x \cos^x}
  |});
  +math-list(${
    |\lp?:!(15pt){\sin^x \cos^x}
    |\rp?:!(15pt){\sin^x \cos^x}
  |});
  +math-list(${
    |\lpb{\sin^x \cos^x}
    |\rpb{\sin^x \cos^x}
  |});
  +math-list(${
    |\lpb?:!(15pt){\sin^x \cos^x}
    |\rpb?:!(15pt){\sin^x \cos^x}
  |});
  +math-list(${
    |\lpB{\sin^x \cos^x}
    |\rpB{\sin^x \cos^x}
  |});
  +math-list(${
    |\lpB?:!(15pt){\sin^x \cos^x}
    |\rpB?:!(15pt){\sin^x \cos^x}
  |});
  +math-list(${
    |\lpabs{\sin^x \cos^x}
    |\rpabs{\sin^x \cos^x}
  |});
  +math-list(${
    |\lpabs?:!(15pt){\sin^x \cos^x}
    |\rpabs?:!(15pt){\sin^x \cos^x}
  |});
  +math-list(${
    |\lpnorm{\sin^x \cos^x}
    |\rpnorm{\sin^x \cos^x}
